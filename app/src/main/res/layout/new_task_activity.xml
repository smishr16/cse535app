<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_below="@+id/editText_desc"
                android:id="@+id/button_pick_date"
                android:text="@string/button_pick_date"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView_date"
                android:layout_toRightOf="@+id/button_pick_date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/button_pick_date"
                android:textAlignment="center"
                android:layout_below="@+id/editText_desc" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_below="@+id/button_pick_date"
                android:id="@+id/button_pick_time"
                android:text="@string/button_pick_time"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView_time"
                android:layout_toRightOf="@+id/button_pick_time"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/button_pick_time"
                android:textAlignment="center"
                android:layout_below="@+id/textView_date" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/textview_mot"
                android:id="@+id/radioGroupMot">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radiobutton_mot_walking"
                    android:text="@string/radiobutton_mot_walking"
                    android:layout_marginLeft="12dp"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radiobutton_mot_cycling"
                    android:text="@string/radiobutton_mot_cycling"
                    android:layout_marginLeft="12dp"
                    android:buttonTint="@color/black"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radiobutton_mot_driving"
                    android:text="@string/radiobutton_mot_driving"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:buttonTint="@color/black"/>

            </RadioGroup>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_desc"
                android:layout_below="@+id/textView_desc"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView_desc"
                android:labelFor="@id/editText_desc"
                android:text="@string/textView_desc"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_mot"
                android:text="@string/textview_mot"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignStart="@+id/textView_desc" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/button_pick_time"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_pick_location"
                android:id="@+id/button_picklocation"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_location"
                android:layout_toRightOf="@+id/button_picklocation"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/button_picklocation"
                android:layout_alignParentTop="true"
                android:textAlignment="center" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_add_reminder"
            android:id="@+id/button_add_reminder"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:backgroundTint="@color/green"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            android:id="@+id/button_save"
            android:textAllCaps="false"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:backgroundTint="@color/green"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_get_directions"
            android:id="@+id/button_get_directions"
            android:textAllCaps="false"
            android:layout_below="@+id/button_save"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:backgroundTint="@color/orange"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_mark_done"
            android:id="@+id/button_mark_done"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="@color/green"
            android:layout_below="@+id/button_add_reminder"
            android:layout_toEndOf="@+id/button_get_directions" />
    </RelativeLayout>

</LinearLayout>